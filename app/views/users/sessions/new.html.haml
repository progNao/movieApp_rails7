= stylesheet_link_tag 'devise_common', media: 'all'

- flash.each do |message_type, message|
  .flash-message{ class: "flash-message #{message_type}" }
    = message

.container
  .card
    = form_with(model: @user, url: user_session_path) do |f|
      = render 'shared/error_messages', object: f.object
      %h3.message Login

      %br

      .field.label-layout
        = f.label :username
        %br
        = f.text_field :username, autofocus: true, autocomplete: "username", class: "input-layout"

      %br

      .field.label-layout
        = f.label :password
        %br
        = f.password_field :password, autocomplete: "current-password", class: "input-layout"

      - if devise_mapping.rememberable?
        .field.checkbox
          = f.check_box :remember_me
          = f.label :remember_me

      .actions
        = f.submit "Log in", class: "btn"

      %br
      %br

      .link
        = render "users/shared/links"
