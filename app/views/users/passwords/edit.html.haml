= stylesheet_link_tag 'devise_common', media: 'all'

.container
  .card
    = form_with model: @user, url: password_path(resource_name), method: :put do |f|
      = render 'shared/error_messages', object: f.object
      = f.hidden_field :reset_password_token
      %h3.message Change your password

      %br

      .field.label-layout
        = f.label :password, "New password"
        - if @minimum_password_length
          %em (#{@minimum_password_length} characters minimum)
        %br
        = f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input-layout"

      .field.label-layout
        = f.label :password_confirmation, "Confirm new password"
        %br
        = f.password_field :password_confirmation, autocomplete: "new-password"

      %br

      .actions
        = f.submit "Change my password"

      .link
        = render "users/shared/links"
